package principal;
import entidadeDAO.AlunoDAO;
import entidades.Aluno;

public class MenuPrincipal 
{

	public static void main(String[] args) 
	{
		// Aluno
		
		// cria um objeto de aluno de acordo com dados fornecidos pelo console e salva no banco de dados
		Aluno aluno = new Aluno().criaAluno();
		new AlunoDAO().salvaAlunoBD(aluno);
		
//		altera os dados de um aluno no banco de dados
		aluno.setNomeAluno("Bruno");
		aluno.setNomePai("Mauro");
		aluno.setNomeMae("Luana");
		aluno.setDataNasc(aluno.formataDataNascAluno("20/09/2001"));
		aluno.setSituacaoAluno("F");
		aluno.setMediaAluno(9);

		new AlunoDAO().alteraDadosAlunoBD(aluno);
		
	}
}
