import java.util.Scanner;

public class Desafio {
	
	/* 
	 * Desenvolva um programa em que o usuário informa até 10 nrs
	 * No final do programa você devera informar qual é o menor numero e o qual é o maior numero 
	 *  */
	
	public static void main(String[] args) {
		Scanner teclado = new Scanner(System.in);
		
		int numero = 0, menorNumero = Integer.MAX_VALUE, maiorNumero = Integer.MIN_VALUE;
		
		for (int i = 0; i < 10; i++) 
		{
			System.out.print("Informe o número " + i + ": ");
			numero = teclado.nextInt();
			
			if (numero > maiorNumero)
			{
				maiorNumero = numero;
			}
			else if (numero < menorNumero)
			{
				menorNumero = numero;
			}
		}
		
		System.out.println("Menor número: " + menorNumero);
		System.out.println("Maior número: " + maiorNumero);
		teclado.close();
	}

}
